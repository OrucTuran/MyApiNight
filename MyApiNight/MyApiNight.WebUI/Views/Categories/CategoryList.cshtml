@model List<MyApiNight.WebUI.DTOs.ResultCategoryDTO>

@{
    Layout = null;
}

<link href="c:\github\myapinight\myapinight\myapinight.webui\wwwroot\lib\bootstrap\dist\css\bootstrap.css" rel="stylesheet" />

<form method="post">
    <div class="container">
        <br /><br />
       <table class="table table-bordered">
           <tr>
               <th>#</th>
               <th>Kategori Adı</th>
               <th>Sil</th>
               <th>Güncelle</th>
           </tr>
           @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CategoryID</td>
                    <td>@item.CategoryName</td>
                    <td><a href="/Categories/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a></td>
                    <td><a href="/Categories/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                </tr>
            }
       </table>
       <a href="/Categories/CreateCategory/"class="btn btn-outline-primary">Yeni Kategori Girişi</a>
    </div>
</form>